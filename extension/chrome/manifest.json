  {
    "name": "comment & chat",
    "description": "Comment and chat every web site",
    "version": "1.0",
    "manifest_version": 3,
    "minimum_chrome_version": "1",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "scripting",
      "commands"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+E",
          "mac": "Shift+Command+E"
        }
      }
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "danmu.js"
        ],
        "css": [
          "danmu.css"
        ]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "image/icon-16.png",
        "32": "image/icon-32.png",
        "64": "image/icon-64.png"
      }
    },
    "icons": {
      "16": "image/icon-16.png",
      "32": "image/icon-32.png",
      "64": "image/icon-64.png"
    },
    "options_page": "options.html"
  }
